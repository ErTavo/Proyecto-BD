    </div>*@
    

<!-- book section -->
<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2 style="color: white">
                Compra tu boleto
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                        <form action="@Url.Content("~/Home/Recuperar")" method="post">
                        <div>
                            <input type="text" class="form-control" placeholder="Nombre" />
                        </div>
                        <div>
                            <input type="text" class="form-control" placeholder="Numero de Telefono" />
                        </div>
                        <div >
                                
                                @Html.TextBoxFor(d => d.Email, null, new { @class = "form-control", id = "correo",  placeholder="Correo electronico" })
                                @Html.ValidationMessageFor(d => d.Email, null, new { @style = "color:red" })
                                
                        </div>
                        <div>
                <select class="form-control nice-select wide">
                  <option value="" disabled selected>
                    Escoje tu evento
                  </option>
                  <option value="">
                    Feria Ingenieria
                  </option>
                  <option value="">
                    Concierto
                  </option>
                  <option value="">
                    Show de Comedia
                  </option>
                </select>
              </div>
                            <div class="btn_box" >
                                <button id="Enviar">
                                Comprar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end book section -->

